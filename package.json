{
  "name": "vu-tree",
  "description": "Treeview component for Vue.js",
  "version": "0.1.1",
  "author": "Anatoliy Ivanov <t0lik@t0lik.com>",
  "library": "VuTree",
  "private": false,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "rollup --config rollup.config.js",
    "build-simple": "vue-cli-service build --target lib --name tree-vue src/components/TreeVue.vue",
    "test:unit": "vue-cli-service test:unit --reporter min",
    "test:unit:detail": "vue-cli-service test:unit",
    "test:jest": "jest",
    "lint": "vue-cli-service lint"
  },
  "main": "dist/tree-vue.umd.js",
  "module": "dist/tree-vue.esm.js",
  "unpkg": "dist/tree-vue.min.js",
  "browser": {
    "./sfc": "src/components/TreeVue.vue"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t0lik/tree-vue.git"
  },
  "homepage": "https://github.com/t0lik/tree-vue#readme",
  "license": "MIT",
  "keywords": [
    "vue",
    "tree",
    "treeview",
    "component"
  ],
  "dependencies": {},
  "files": [
    "src",
    "dist/*.js"
  ],
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "@rollup/plugin-alias": "^2.2.0",
    "@rollup/plugin-buble": "^0.20.0",
    "@rollup/plugin-replace": "^2.2.1",
    "@vue/cli-plugin-babel": "^4.0.5",
    "@vue/cli-plugin-eslint": "^4.0.5",
    "@vue/cli-plugin-unit-mocha": "^4.0.5",
    "@vue/cli-service": "^4.0.5",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.1.2",
    "core-js": "^3.4.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.0.0",
    "jest": "^24.9.0",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "rollup": "^1.27.2",
    "rollup-plugin-alias": "^2.2.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.3",
    "rollup-plugin-vue": "5.1.1",
    "sinon": "^7.5.0",
    "vue": "^2.6.10",
    "vue-jest": "^3.0.5",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "standard"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx)"
    ],
    "testURL": "http://localhost/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/storages/*.js",
      "src/mixins/*.js",
      "!src/mixins/index.js",
      "src/components/*.vue",
      "!**/node_modules/**"
    ],
    "coverageReporters": [
      "html",
      "text-summary"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
